{
	"compilerOptions": {
		"outDir": "dist/esm",
		"module": "esnext",
		"target": "es5",
		"lib": [
			"DOM",
			"es6",
			"dom",
			"es2016",
			"es2017"
		],
		"jsx": "react",
		"declaration": true,
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
		"strict": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		".storybook",
		"lib",
		"dist",
		"src/**/*.stories.tsx"
	]
}